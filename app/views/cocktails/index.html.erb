
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_url('banner.jpg') %>);">
  <div class="container">
    <h1>List of cocktails</h1>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-flat" %>
  </div>
</div>

  
<ul>
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
</ul>






